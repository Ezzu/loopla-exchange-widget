# Environment
NODE_ENV=development

# Docker Build
BUILD_TARGET=development
ENABLE_VOLUMES=./src

# Ports
PORT=4000
NGINX_PORT=3000

# CORS - with nginx proxy, frontend and backend are same origin
# Set to your production domain or * for development
ALLOWED_ORIGINS=*

# External API
EXCHANGE_RATES_BASE_URL=https://api.exchangeratesapi.io/v1
EXCHANGE_RATES_API_KEY=your_api_key_here
